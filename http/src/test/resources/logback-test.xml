<!--
 | Logback configuration
 |
 | Variables (with the syntax: ${variable.name}) are replaced by Gradle.
 !-->
<configuration>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>
                %d{HH:mm:ss.SSS} %highlight(%-5p) %magenta([%-12thread]) %cyan(%-15.15logger{0}) | %m%n
            </Pattern>
        </encoder>
    </appender>

    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>logs/application-%d{yyMMdd}.log</FileNamePattern>
            <MaxHistory>5</MaxHistory>
        </rollingPolicy>
        <encoder>
            <Pattern>%d{HH:mm:ss.SSS} %-5p [%-12thread] %-15.15logger{0} | %m%n</Pattern>
        </encoder>
    </appender>

    <root>
        <level value="info" />
        <appender-ref ref="console" />
        <appender-ref ref="file" />
    </root>

    <logger name="sabina.http">
        <level value="trace" />
    </logger>
</configuration>
